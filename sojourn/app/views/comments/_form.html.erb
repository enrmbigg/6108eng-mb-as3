<h3>Say something!</h3>
<%= form_for @comment do |f| %>
<%= f.hidden_field :article_id %>
    <%= f.label :author_name, "Your name" %><br />
    <%= f.text_field :author_name %><br />
    <%= f.label :body, "Comment" %><br />
    <%= f.text_area :body, :rows => 8 %><br />
    <%= f.submit "Add comment" %>
<% end %>